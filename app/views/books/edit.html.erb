<p class="id"><%= flash[:notice] %></p>


<h1>Editing Book</h1>

<% if @book.errors.any? %>
    <div id="error_explanation">

        <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
        <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>

<% end %>

<%= form_with model:@book, url:book_path(@book.id), local:true do |f| %>

<div class="field">
    <% if @book.errors.any? %>
    <div class="field_with_errors">
    <% end %>
        <label>Title</label>
    </div>
    <% if @book.errors.any? %>
    <div class="field_with_errors">
    <% end %>
        <%= f.text_field :title %>
    </div>
</div>

<div class="field">
    <% if @book.errors.any? %>
    <div class="field_with_errors">
    <% end %>
        <label>Body</label>
    </div>
    <% if @book.errors.any? %>
    <div class="field_with_errors">
    <% end %>
        <%= f.text_area :body %>
    </div>

</div>

<div class="actions">
        <%= f.submit "Update Book" %>
</div>

<%= link_to "Show", book_path(@book.id) %>
    |
<%= link_to "Back", books_path %>
<% end %>


