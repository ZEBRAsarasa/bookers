

<h2>New book</h2>

<% if @book.errors.any? %>
    <div id="error_explanation">

        <h3><%= @book.errors.count %>error prohibited this book from being saved:</h3>
        <ul>
            <% @book.errors.full_messages.each do |message| %>

            <li><%= message %></li>
            <% end %>
        </ul>
    </div>

<% end %>

<%= form_with model:@book, url:'/books', local:true do |f| %>
    <div class="field">
        <label>Title</label>
        <%= f.text_field :title %>
    </div>

    <div class="field">
        <label>Body</label>
        <%= f.text_area :body %>
    </div>

    <%= f.submit "Create Book" %>

<% end %>